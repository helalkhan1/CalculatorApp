<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".MainActivity"
android:background="@color/black">

<TextView
    android:id="@+id/tv"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:textSize="40sp"
    android:textColor="@color/white"
    android:gravity="right|center_vertical"
    android:paddingRight="20dp"
    android:text=""/>

<TextView
    android:id="@+id/rtv"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:textSize="40sp"
    android:textColor="@color/white"
    android:layout_below="@+id/tv"
    android:gravity="right|center_vertical"
    android:paddingRight="20dp"
    android:text=""/>


<LinearLayout
    android:id="@+id/ll"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:orientation="horizontal"
    android:layout_below="@+id/rtv">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="4">

        <Button
            android:id="@+id/lArrow"
            android:layout_gravity="fill"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:backgroundTint="#323131"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="bold"
            android:text="&lt;" />

        <Button
            android:id="@+id/rArrow"
            android:layout_gravity="fill"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:backgroundTint="#323131"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_marginLeft="6dp"
            android:text="&gt;"
            />

        <Button
            android:id="@+id/ac"
            android:layout_gravity="fill"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:backgroundTint="#323131"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_marginLeft="6dp"
            android:text="AC" />

        <Button
            android:id="@+id/del"
            android:layout_gravity="fill"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:backgroundTint="#323131"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_marginLeft="6dp"
            android:text="DEL" />

    </GridLayout>




</LinearLayout>

<GridLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="4"
    android:rowCount="4"
    android:layout_below="@+id/ll">

    <Button
        android:id="@+id/btn7"
        android:layout_gravity="fill"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:backgroundTint="#676464"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold"
        android:text="7" />

    <Button
        android:id="@+id/btn8"
        android:layout_gravity="fill"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:backgroundTint="#676464"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_marginLeft="6dp"
        android:text="8" />

    <Button
        android:id="@+id/btn9"
        android:layout_gravity="fill"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:backgroundTint="#676464"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_marginLeft="6dp"
        android:text="9" />

    <Button
        android:id="@+id/btnDivide"
        android:layout_gravity="fill"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:backgroundTint="#323131"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_marginLeft="6dp"
        android:text="/" />

    <Button
        android:id="@+id/btn4"
        android:layout_gravity="fill"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:backgroundTint="#676464"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold"
        android:text="4" />

    <Button
        android:id="@+id/btn5"
        android:layout_gravity="fill"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:backgroundTint="#676464"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_marginLeft="6dp"
        android:text="5" />

    <Button
        android:id="@+id/btn6"
        android:layout_gravity="fill"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:backgroundTint="#676464"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_marginLeft="6dp"
        android:text="6" />

    <Button
        android:id="@+id/btnMultiple"
        android:layout_gravity="fill"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:backgroundTint="#323131"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_marginLeft="6dp"
        android:text="*" />

    <Button
        android:id="@+id/btn1"
        android:layout_gravity="fill"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:backgroundTint="#676464"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold"
        android:text="1" />

    <Button
        android:id="@+id/btn2"
        android:layout_gravity="fill"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:backgroundTint="#676464"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_marginLeft="6dp"
        android:text="2" />

    <Button
        android:id="@+id/btn3"
        android:layout_gravity="fill"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:backgroundTint="#676464"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_marginLeft="6dp"
        android:text="3" />

    <Button
        android:id="@+id/btnMinus"
        android:layout_gravity="fill"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:backgroundTint="#323131"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_marginLeft="6dp"
        android:text="-" />

    <Button
        android:id="@+id/btnDot"
        android:layout_gravity="fill"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:backgroundTint="#676464"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold"
        android:text="." />

    <Button
        android:id="@+id/btn0"
        android:layout_gravity="fill"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:backgroundTint="#676464"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_marginLeft="6dp"
        android:text="0" />

    <Button
        android:id="@+id/btnEqual"
        android:layout_gravity="fill"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:backgroundTint="#323131"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_marginLeft="6dp"
        android:text="=" />

    <Button
        android:id="@+id/btnPlus"
        android:layout_gravity="fill"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:backgroundTint="#323131"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_marginLeft="6dp"
        android:text="+" />



</GridLayout>


</RelativeLayout>